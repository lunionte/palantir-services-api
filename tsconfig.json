{
    "compilerOptions": {
        "module": "CommonJS", // Alterado para CommonJS
        "target": "es2022",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "rootDir": "src",
        "outDir": "lib",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noEmitOnError": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true
    },
    "compileOnSave": true,
    "include": ["src/**/*"],
    "exclude": ["**/*.spec.ts"]
}
